// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

$font-family = Slackey
$header-background-color = #90425c
$masthead-background-color = #3a859f
$background-color = hsl(200,5%,15%)
$body-color = #fff
$text-color = #000
$hover-color = #f4f0c3
$text-shadow = #5f6359
$box-shadow = #4b4d45

@font-face
  font-family "FontAwesome"
  src url("fonts/fontawesome-webfont.eot")
  src url("fonts/fontawesome-webfont.eot?#iefix") format('eot'),
      url("fonts/fontawesome-webfont.woff") format('woff'),
       url("fonts/fontawesome-webfont.ttf") format('truetype'),
       url("fonts/fontawesome-webfont.svg#FontAwesome") format('svg')
  font-weight normal
  font-style normal

body
  padding-top: 72px
  color: $body-color
  background-size: 5px 5px
  background-color: $background-color
  background-image:   -webkit-linear-gradient( 45deg, hsla(0,0%,0%,0) 0px,
                                                      hsla(0,0%,0%,.10) 50%,
                                                      hsla(0,0%,0%,0) 100% )

header
  font-family: $font-family

  .navbar
    background: $header-background-color
    padding: 10px 0
    border-bottom: 2px solid $box-shadow

    .navbar-brand,
    .navbar-nav > li > a
      color: $body-color

    .navbar-brand:hover,
    .navbar-nav > li > a:hover
      color: $hover-color

    .navbar-brand
      font-size: 22px
      text-transform: uppercase
      text-shadow: 2px 2px $text-shadow

    .nav > li > a
      font-size: 12px

.masthead
  background: $masthead-background-color url("../img/noise.png") top left repeat
  text-align: center

  h1
    font-family: $font-family
    font-size: 54px
    padding: 10px 0
    text-shadow: 2px 2px $text-shadow

    strong
      color: $hover-color

  h2
    color: #245060
    font-weight: 100
    font-size: 28px
    padding: 20px 0 10px
    border-top: 2px solid #42a0ba
    box-shadow: 0 -2px #276475
    width: 60%
    margin: 10px auto

    a
      color: inherit
      text-decoration: none

    a:hover
      color: $hover-color

  .windows
    position: relative
    padding-top: 20px
    height: 320px
    overflow: hidden
    z-index: 1

    [class^="image-"]
      position: absolute
      transition: all 400ms ease

    [class^="image-"]:hover
      bottom: 2%

    .image-left
      width: 30%
      bottom: -8%
      left: 5%

    .image-left:hover
      left: 0

    .image-center
      width: 40%
      bottom: -9%
      left: 50%
      margin-left: -20%

    .image-right
      width: 30%
      right: 5%
      bottom: -6%

.masthead:after
  position: absolute
  content: url(../img/flower.png)
  top: -50px
  right: 10px
  opacity: 0.5

.features
  position: relative
  z-index: 2
  padding: 30px 0
  background: url("../img/stripped-bg.png")
  box-shadow: 0px -10px 2px 0px rgba(0, 0, 0, 0.2), inset 0px 2px $box-shadow

  .info-bullet
    text-align: center
    margin-bottom: 10px

    i
      font-size: 90px
      display: block
      line-height: 102px
      text-shadow: 1px 1px $text-shadow

    h5
      color: #3a859f
      font-size: 22px
      text-transform: uppercase
      text-shadow: 1px 1px $text-shadow
      margin-bottom: 5px
      padding-bottom: 10px
      font-family: $font-family

  p
    color: $text-color

footer
  padding-top: 30px
  font-family: $font-family
  height: 200px

  a
    color: #b7c4be
    font-size: 18px
    margin-right: 15px

  a:hover
    color: $body-color
    text-decoration: none

.power
  font-family "FontAwesome"
  text-shadow 0px 1px 1px rgba(250,250,250,0.1)
  font-size 32pt
  display block
  position relative
  text-decoration none
  box-shadow 0px 3px 0px 0px rgb(34,34,34),
     0px 7px 10px 0px rgb(17,17,17),
          inset 0px 1px 1px 0px rgba(250, 250, 250, .2),
          inset 0px -12px 35px 0px rgba(0, 0, 0, .5)
  width 70px
  height 70px
  border 0
  color rgb(37,37,37)
  border-radius 35px
  text-align center
  line-height 79px
  background-color rgb(83,87,93)
  transition color 350ms ease, text-shadow 350ms
  -o-transition color 350ms ease, text-shadow 350ms
  -moz-transition color 350ms ease, text-shadow 350ms
  -webkit-transition color 350ms ease, text-shadow 350ms
  a
    color black
    text-decoration none
    &:before
      content ""
      width 80px
      height 80px
      display block
      z-index -2
      position absolute
      background-color rgb(26,27,29)
      left -5px
      top -2px
      border-radius 40px
      box-shadow 0px 1px 0px 0px rgba(250,250,250,0.1),
    inset 0px 1px 2px rgba(0, 0, 0, 0.5)

    &:active
      box-shadow 0px 0px 0px 0px rgb(34,34,34),
     0px 3px 7px 0px rgb(17,17,17),
          inset 0px 1px 1px 0px rgba(250, 250, 250, .2),
          inset 0px -10px 35px 5px rgba(0, 0, 0, .5)
      background-color rgb(83,87,93)
      top 3px
    &.on
      top 3px
      color #fff
      text-shadow 0px 0px 3px rgb(250,250,250)
      & + span
        box-shadow inset 0px 1px 0px 0px rgba(250,250,250,0.5),
 0px 0px 3px 2px rgba(135,187,83,0.5)
        background-color rgb(135,187,83)
    & + span
      display block
      width 8px
      height 8px
      background-color rgb(226,0,0)
      box-shadow inset 0px 1px 0px 0px rgba(250,250,250,0.5),
 0px 0px 3px 2px rgba(226,0,0,0.5)
      border-radius 4px
      clear both
      position absolute
      bottom 0
      left 42%
      transition background-color 350ms, box-shadow 700ms
      -o-transition background-color 350ms, box-shadow 700ms
      -moz-transition background-color 350ms, box-shadow 700ms
      -webkit-transition background-color 350ms, box-shadow 700ms

.power a:active, a:focus, a:hover
  outline 0
  text-decoration none

.power a:active:before, a.on:before
  top -5px
  background-color rgb(26,27,29)
  box-shadow 0px 1px 0px 0px rgba(250,250,250,0.1),
    inset 0px 1px 2px rgba(0, 0, 0, 0.5)

button
  &.main
    margin 0px 10px
    position relative
    &.depth
      background #444
      border none
      border-radius 80px
      box-shadow inset 0 0 2px 2px hsla(0,0%,0%,.2),
                inset 0 0 2px 4px hsla(0,0%,0%,.2),
                inset 0 0 2px 6px hsla(0,0%,0%,.2),
                inset 0 0 1px 8px hsla(0,0%,0%,.5),
                inset 0 -4px 2px 4px hsla(0,0%,0%,.5),
                inset 0 1px 1px 8px hsla(0,0%,100%,.25),
                inset 0 -30px 30px hsla(0,0%,0%,.2),
                0 -4px 8px 4px hsla(0,0%,0%,.5),
                0 10px 10px hsla(0,0%,0%,.25),
                0 0 2px 2px hsla(0,0%,0%,.2),
                0 0 2px 4px hsla(0,0%,0%,.2),
                0 0 2px 6px hsla(0,0%,0%,.2),
                0 0 2px 8px hsla(0,0%,0%,.5),
                0 1px 2px 8px hsla(0,0%,100%,.25),
                0 -1px 2px 8px hsla(0,0%,0%,.5)
      color #303030
      cursor pointer
      font bold 40px/85px sans-serif
      height 80px
      padding 0
      text-shadow 0 1px 1px hsla(0,0%,100%,.25),
                 0 -1px 1px hsla(0,0%,0%,.75)
      width 80px
      &:active
        box-shadow inset 0 0 2px 2px hsla(0,0%,0%,.2),
                inset 0 0 2px 4px hsla(0,0%,0%,.2),
                inset 0 0 2px 6px hsla(0,0%,0%,.2),
                inset 0 0 1px 7px hsla(0,0%,0%,.5),
                inset 0 5px 15px 7px hsla(0,0%,0%,.15),
                inset 0 -4px 2px 3px hsla(0,0%,0%,.5),
                inset 0 1px 1px 7px hsla(0,0%,100%,.25),
                inset 0 -30px 30px hsla(0,0%,0%,.1),
                inset 0 30px 30px hsla(0,0%,0%,.2),
                0 -4px 8px 4px hsla(0,0%,0%,.5),
                0 5px 10px hsla(0,0%,0%,.25),
                0 0 2px 2px hsla(0,0%,0%,.2),
                0 0 2px 4px hsla(0,0%,0%,.2),
                0 0 2px 6px hsla(0,0%,0%,.2),
                0 0 2px 8px hsla(0,0%,0%,.5),
                0 1px 2px 8px hsla(0,0%,100%,.25),
                0 -1px 2px 8px hsla(0,0%,0%,.5)
        line-height 86px

button.main:hover,
button.main:active
  outline 0

button.main.depth:hover,
button.main.depth:focus
  color #0ab
  text-shadow 0 0 20px hsla(240,75%,75%,.5),
                 0 1px 1px hsla(0,0%,100%,.25),
                 0 -1px 1px hsla(0,0%,0%,.75)

.macrosContainer
  list-style none
  margin-left 0
  font-size 0.65em
  &:after
    content ""
    display table
    clear both

.macros:before,
.macros:after,
.macros .button:after,
.macros .button.active:before,
.macros .button.active:after,
.macros .button:first-child:before,
.macros .button:last-child:before
  content ''
  display block
  position absolute

.Nav_Small
  font-size 0.65em

.Nav_Large
  font-size 1.4em

